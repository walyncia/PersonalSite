    <style>
      .drop {
        margin: 0 auto;
        background: rgba(255,255,255,0.4);
        border-radius: 10px;
        border: 1px solid rgba(255,255,255,0.2);
        position: absolute;
        backdrop-filter: blur(1px);
        -webkit-backdrop-filter: blur(2px);
        display: block;
        right:0;
        position:absolute
      }

      .drop1 {
        width: 40%;
        height: 250px;
        top: 106px;
        left: 0;
        right: -50%;
        z-index: 2;
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
      }

      .drop2 {
          width: 40px;
          height: 40px;
          top: -30px;
          left: -80%;
          right: 0;
          z-index: 4;
      }

      .drop3 {
          width: 110px;
          height: 70px;
          top: 230px;
          left: 70%;
          right: 0;
          z-index: 2px;
      }
      .drop4b {
          width: 45px;
          height: 45px;
          border-radius: 50%;
          top: -30%;
          left: 10%;
          right: 0;
          z-index: 2px;
      }
      .drop4a {
          width: 25px;
          height: 25px;
          border-radius: 50%;
          top: -15%;
          left: 20%;
          right: 0;
          z-index: 2px;
      }
      .wrap{
        position: relative;
      }


    </style>
  </head>

  <body>

    <div>
      <%- include ('../partials/title.ejs')  -%>
    </div>
    <div class='wrap'>
      <div class="drop drop1">
        <div class="drop drop2"></div>
        <div class="drop drop3"></div>
        <div class="drop drop4a"></div>
        <div class="drop drop4b"></div>
      </div>
   </div>
  </body>
